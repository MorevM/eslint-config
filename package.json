{
	"name": "@morev/eslint-config",
	"description": "Strict shareable ESLint configuration with reasonable defaults",
	"type": "module",
	"version": "34.0.0",
	"private": false,
	"engines": {
		"node": ">=20"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"author": {
		"name": "Maxim Morev",
		"email": "max.seainside@gmail.com"
	},
	"homepage": "https://github.com/MorevM/eslint-config#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/MorevM/eslint-config"
	},
	"keywords": [
		"eslint",
		"eslintconfig",
		"config",
		"codestyle"
	],
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./plugins": {
			"types": "./dist/plugins.d.ts",
			"import": "./dist/plugins.js"
		},
		"./parsers": {
			"types": "./dist/parsers.d.ts",
			"import": "./dist/parsers.js"
		}
	},
	"main": "./dist/index.js",
	"scripts": {
		"prepare": "lefthook install",
		"build": "tsup",
		"test": "yarn build && vitest",
		"lint": "eslint \"**/*.{js,ts,json,json5,jsonc,yml,yaml,md}\"",
		"lint:fix": "eslint \"**/*.{js,ts,json,json5,jsonc,yml,yaml,md}\" --fix",
		"release": "release-it --disable-metrics"
	},
	"peerDependencies": {
		"eslint": "^9.9.1",
		"typescript": "^5.4.2"
	},
	"dependencies": {
		"@html-eslint/eslint-plugin": "^0.25.0",
		"@html-eslint/parser": "^0.25.0",
		"@morev/utils": "^3.11.1",
		"@stylistic/eslint-plugin": "^2.6.2",
		"@vitest/eslint-plugin": "^1.1.7",
		"eslint-config-flat-gitignore": "^0.1.8",
		"eslint-define-config": "^2.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-astro": "^1.2.3",
		"eslint-plugin-chai-friendly": "^1.0.1",
		"eslint-plugin-cypress": "^3.4.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import-x": "^3.1.0",
		"eslint-plugin-jest": "^28.7.0",
		"eslint-plugin-jsdoc": "^48.11.0",
		"eslint-plugin-jsonc": "^2.16.0",
		"eslint-plugin-jsx-a11y": "^6.9.0",
		"eslint-plugin-markdownlint": "^0.3.4",
		"eslint-plugin-n": "^17.10.2",
		"eslint-plugin-no-autofix": "^2.0.0",
		"eslint-plugin-no-secrets": "^1.0.2",
		"eslint-plugin-regexp": "^2.6.0",
		"eslint-plugin-sonarjs": "^1.0.4",
		"eslint-plugin-unicorn": "^55.0.0",
		"eslint-plugin-vue": "^9.27.0",
		"eslint-plugin-yml": "^1.14.0",
		"globals": "^15.9.0",
		"jsonc-eslint-parser": "^2.4.0",
		"typescript-eslint": "^8.0.1",
		"vue-eslint-parser": "^9.4.3",
		"yaml-eslint-parser": "^1.2.3"
	},
	"devDependencies": {
		"@morev/commitlint-config": "^0.2.2",
		"@release-it/conventional-changelog": "^8.0.1",
		"eslint": "^9.8.0",
		"lefthook": "^1.7.11",
		"release-it": "^17.6.0",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "^2.0.5",
		"vue": "^3.4.35"
	}
}
